<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B9D1D5"
    tools:context=".ui.anasayfa.AnasayfaFragment">

     <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
         android:id="@+id/anasayfa_frame">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true"
        android:orientation="vertical"
        android:scrollbars="horizontal|vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_gravity="top"
            android:foregroundGravity="top"
            android:src="@drawable/bg" />

        <TextView
            android:id="@+id/text_anasayfa"
            android:layout_width="199dp"
            android:layout_height="53dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/altbg"
            android:fontFamily="sans-serif-black"
            android:gravity="center_horizontal"
            android:text="ErenSu"
            android:textAlignment="center"
            android:textColor="@color/mainText"
            android:textSize="30dp"
            android:textStyle="bold" />





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:background="@color/mainBackground"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="193dp"
                android:layout_height="290dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/logo"
                android:fontFamily="sans-serif-thin"
                android:lineSpacingExtra="8sp"
                android:text="ErenSU Pazar günleri de dahil her gün suyunuzu güvenle evinize taşımaya devam ediyoruz. COVID-19 Güvenli Üretim Sertifikasına sahip damacana ve PET su siparişlerinizi bu hafta sonu da mobil uygulamamızdan sipariş verebilirsiniz."
                android:textColor="@color/mainText"
                android:textSize="16dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button"
                android:layout_width="120dp"
                android:layout_height="61dp"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/switch_button_bg"
                android:text="Ürünler için tıklayın."
                android:textColor="@color/black"
                android:textSize="11dp"
                app:backgroundTint="#BED0DD" />
        </RelativeLayout>


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="380dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/bgbg" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:src="@drawable/erensu" />


    </LinearLayout>
    </ScrollView>
</FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>